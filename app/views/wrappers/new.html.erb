<div class="container">
  <div class="wrapper">
    <h4 class="text-center">Word Wrap</h4>

    <%= form_with url: '/wrappers' do |form| %>
      <div class="form-group mt-4 w-50">
        <%= form.label "Enter column number" %>
        <%= form.number_field :col_size, min: 0, required: true, class: "form-control" %>
      </div>

      <div class="form-group mt-4">
        <%= form.label "Enter string to wrap" %>
        <%= form.text_field :input_str, required: true, class: "form-control" %>
      </div>

      <div class="mt-4 text-end">
        <%= form.submit "Wrap String", class: "btn btn-primary" %>
      </div>
    <%end%>
  </div>
</div>
